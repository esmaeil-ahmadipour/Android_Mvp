<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spaceDimen_3">

    <EditText
        android:id="@+id/edt_fragmentSearch_searchNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_shape"
        android:hint="@string/search"
        android:padding="@dimen/spaceDimen_3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fragmentSearch_searchNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_fragmentSearch_searchNews"
        android:layout_margin="@dimen/spaceDimen_3" />

    <TextView
        android:id="@+id/txt_FragmentSearch_notFound"
        style="@style/customFont1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/not_found"
        android:textSize="@dimen/fontDimen_4"
        android:visibility="gone" />

</RelativeLayout>