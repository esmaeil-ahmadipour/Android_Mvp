<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spaceDimen_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/txt_categoriesRow_title"
    android:textColor="@color/Black"
    android:layout_alignParentEnd="true"
    android:text="@string/test_loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/txt_categoriesRow_icon"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/spaceDimen_2"
        android:layout_below="@+id/txt_categoriesRow_icon"
        android:background="@color/Gray300"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerDimen_normal"
        />


</RelativeLayout>